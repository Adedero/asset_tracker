{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2020",
    "rootDir": "../../src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["../../src/*"]
    }
  },
  "include": ["../app/*"]
}
